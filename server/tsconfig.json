{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "sourceMap": false, 
        "rootDir": "./src",
        "outDir": "./dist",
        "watch": true,
        "strict": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./src/**/*"
    ]
}